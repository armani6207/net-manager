<h1>Edit Account</h1>

<%= form_for @user do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :email %>
    <%= f.text_field :email %><br>

    <%= f.label :current_password %>
    <%= f.password_field :password %><br>

    <%= f.label :new_password %>
    <%= f.password_field :new_password %><br>

    <%= f.submit %>

<% end %>