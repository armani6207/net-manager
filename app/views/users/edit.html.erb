
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
      kept your account from being updated:
    </h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class='form'>
<h1 class='header'>Edit Account</h1>
<%= form_for @user do |f| %>

    <div class='field'>
    <%= f.text_field :name, placeholder: "Name" %><br>
    </div>

    <div class='field'>
    <%= f.text_field :email, placeholder: "Email" %><br>
    </div>

    <div class='field'>
    <%= f.password_field :password, placeholder: "Current Password" %><br>
    </div>

    <div class='field'>
    <%= f.password_field :new_password, placeholder: "New Password" %><br>
    </div>

    <div class='button'>
    <%= f.submit 'Edit' %>
    </div>

<% end %>
</div>