
<% if @network.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@network.errors.count, "error") %>
      kept your network from being updated:
    </h2>

    <ul>
    <% @network.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class='form'>
<h1 class='header'> <%= "Edit #{@network.name}" %> </h1>
<%= render 'form' %>
</div>